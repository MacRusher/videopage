<!DOCTYPE html>
<html>
	<head>
		<title>VideoPage</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %> <!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>
	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<%= link_to 'VideoPage', root_path, class: 'brand' %>
					<ul class="nav pull-right">
						<% if user_signed_in? %>
						<li>
							<%= link_to 'Twoje materiały video', videos_index_path %>
						</li>
						<li>
							<%= link_to 'Wrzuć nowy materiał', videos_new_path %>
						</li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b> </a>
							<ul class="dropdown-menu">
								<li>
									<%= link_to 'Twoje konto', edit_user_registration_path %>
								</li>
								<li>
									<%= link_to 'Wyloguj się', destroy_user_session_path %>
								</li>
							</ul>
						</li>
						<% else %>
						<li class="active">
							<%= link_to 'Załóż nowe konto!', new_user_registration_path %>
						</li>
						<li>
							<%= link_to 'Zaloguj się', new_user_session_path %>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div class="container">
			<% if !notice.nil? %>
			<p class="alert alert-info">
				<%= notice %>
			</p>
			<% end %>
			<% if !alert.nil? %>
			<p class="alert alert-error">
				<%= alert %>
			</p>
			<% end %>
			<div class="hero-unit">
				<%= yield %>
			</div>
		</div>
		<footer class="footer">
			<div class="container">
				<small>Wykonanie: <a href="http://socialfreaks.pl">Maciej Stasiełuk</a></small>
			</div>
		</footer>
	</body>
</html>
